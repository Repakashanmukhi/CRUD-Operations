<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
    <Dialog title="Add Employee Details">
        <content>
            <form:SimpleForm>
                <form:content>
                    <Label text="ID" />
                    <Input id="idInput" />
                    <Label text="First Name" />
                    <Input id="firstNameInput" />
                    <Label text="Last Name" />
                    <Input id="lastNameInput" />
                    <Label text="Phone" />
                    <Input id="phoneInput" />
                    <Label text="Department" />
                    <Input id="departmentInput" />
                    <Label text="Position" />
                    <Input id="positionInput" />
                    <Label text="Joining Date" />
                    <Input id="joiningDateInput" />
                </form:content>
                </form:SimpleForm>
        </content>
        <beginButton>
            <Button text="Submit" press=".onSubmitRecord" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onCancelRecord" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
